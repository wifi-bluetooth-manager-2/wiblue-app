#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules/sass-embedded/dist/bin/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules/sass-embedded/dist/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules/sass-embedded/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules/sass-embedded/dist/bin/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules/sass-embedded/dist/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules/sass-embedded/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/sass-embedded@1.83.1/node_modules:/home/tomek/wiblue2/wiblue-app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../sass-embedded/dist/bin/sass.js" "$@"
else
  exec node  "$basedir/../../../sass-embedded/dist/bin/sass.js" "$@"
fi
